{% extends 'base.jinja2' %}

{% block style %}
<link rel="stylesheet" type="text/css" href="{{request.static_url('app:static/css/new_video.css')}}">
{% endblock %}

{% block title %}New Video{% endblock %}


{% block body %}
<h3>New Video</h3>

<div class="form-wrapper">
    <form action="/new_video" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input name="title" id="title" class="form-control form-control-lg" type="text" placeholder="Video title">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description" rows="3" placeholder="Video description"></textarea>
            <label for="theme">Theme</label>
            <select name="theme" id="theme" class="form-control">
                <option>Another</option>
                {% for theme in themes %}
                    <option>{{theme.text}}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
{% endblock %}